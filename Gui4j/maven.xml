<project xmlns:ant="jelly:ant">
    
    <!-- include the generated gui4 docs into maven docs -->
    <preGoal name="site">
        <!-- Override distDoc property to generate doc into maven directory -->
        <ant:property name="distDoc" value="${maven.docs.dest}/gui4jdocs" />
        <ant:ant dir="${basedir}/deploy" antfile="build.xml" target="generateDoc" />
    </preGoal>
    
    <!-- include file from "files" in base dir of distribution zips -->
    <preGoal name="dist:build-bin">
        <ant:copy todir="${maven.dist.bin.assembly.dir}">
            <ant:fileset dir="${basedir}/files"/>
        </ant:copy>
        <ant:copy todir="${maven.dist.bin.assembly.dir}/lib">
            <ant:fileset dir="${basedir}/lib"/>
        </ant:copy>        
    </preGoal>
</project>